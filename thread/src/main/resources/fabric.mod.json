{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${version}",
  "name": "${mod_name}",
  "description": "${description}",
  "authors": [
    "${fl_authors}"
  ],
  "contact": {
    "homepage": "${homepage}",
    "issues": "${issue_tracker}",
    "sources": "${sources_url}"
  },
  "license": "${license}",
  "icon": "${mod_id}.png",
  "environment": "*",
  "entrypoints": {
    "main": ["${group}.ThreadMain"]
  },
  "mixins": [
    "${mod_id}.common.mixins.json",
    "${mod_id}.thread.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${fabric_loader_version}",
    "fabric-api": ">=${fabric_api_version}",
    "minecraft": "${fl_minecraft_constraint}",
    "java": ">=${java_version}"
  }
}
